{
	"name": "board-score-hub",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"setup": "pnpm install && pnpm run prepare",
		"dev": "vite",
		"start": "vite --open --host",
		"build": "pnpm run lint && tsc -b && vite build",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"preview": "vite preview",
		"format": "prettier --write src --ignore-path .prettierignore",
		"format:check": "prettier --check src --ignore-path .prettierignore",
		"verify": "pnpm run lint && pnpm run format:check && pnpm run build",
		"prepare": "husky",
		"parse": "npx tsc -p tsconfig.parse.json && node run.js"
	},
	"dependencies": {
		"@types/webfontloader": "^1.6.38",
		"bootstrap-icons": "^1.11.3",
		"echarts": "^5.6.0",
		"echarts-for-react": "^3.0.2",
		"html2canvas": "^1.4.1",
		"prettier": "^3.3.3",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-qrcode-logo": "^3.0.0",
		"react-router-dom": "^6.25.1",
		"sass": "^1.77.8",
		"webfontloader": "^1.6.28"
	},
	"devDependencies": {
		"@types/react": "^18.3.3",
		"@types/react-dom": "^18.3.0",
		"@typescript-eslint/eslint-plugin": "^7.15.0",
		"@typescript-eslint/parser": "^7.15.0",
		"@vitejs/plugin-react-swc": "^3.5.0",
		"eslint": "^8.57.0",
		"eslint-plugin-react-hooks": "^4.6.2",
		"eslint-plugin-react-refresh": "^0.4.7",
		"husky": "^9.1.7",
		"typescript": "^5.2.2",
		"vite": "^5.4.18"
	}
}
