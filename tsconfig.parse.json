{
	"compilerOptions": {
		"module": "ESNext", // ⚠️ not "CommonJS"
		"target": "ES2020",
		"outDir": "./dist",
		"rootDir": "./src",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true
	},
	"include": ["src"], // Files to compile
	"exclude": ["node_modules", "dist"] // Files to ignore
}
